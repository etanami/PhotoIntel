generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  password  String
  images    Image[]
  createdAt DateTime @default(now())
}

model Image {
  id        Int   @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  url       String
  metadata  Json
  location  String?
  aiSummary String?
  createdAt DateTime @default(now())
}
